<div class="list-group-item">
    <h3 class="card-title"><%= assignment.name %></h3>
    <h4>points: <%= assignment.points %></h4>
    <h4>available: <%= assignment.open %></h4>
    <h4>due: <%= assignment.close %></h4>
    <% var available = assignment.openms < Date.now(); %>
    <% if(available){ %>
        <a href="/takeassignment/<%= assignment.id %>" class="reportlink">Take Assignment</a>
    <% } else { %>
        <h4>Assignment will open <%= assignment.open %></h4>
    <% } %>
    <span style="display:block; height: 20px;"></span>
</div>