<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('../../partials/head', { title: title }) %>
  </head>

  <body>
    <div class="wrapper">
      <%- include('../../partials/student/sidebar', {courses: courses}) %>
      <div id="content">
        <h1>Update Account Info</h1>

        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="assignment_latepenalty">First Name</label>
                <input type="TEXT" class="form-control" id="firstname" placeholder="First Name" value="<%= user.firstname %>">
            </div>
            <div class="form-group col-md-3">
                <label for="assignment_latepenalty">Last Name</label>
                <input type="TEXT" class="form-control" id="lastname" placeholder="First Name" value="<%= user.lastname %>">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="assignment_latepenalty">Email</label>
                <input type="TEXT" class="form-control" id="email" placeholder="e.g. example@example.com" value="<%= user.email %>">
            </div>
        </div>

        <button type="button" class="appbtn" id="search">Update Information</button>

        <div id="inforesult"></div>

        <span style="display:block; height: 20px;"></span>
        <hr>
        <span style="display:block; height: 20px;"></span>

        <h1>Update Password</h1>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="assignment_latepenalty">Enter Current Password</label>
                <input type="password" class="form-control" id="password" placeholder="Current Password">
            </div>
            <div class="form-group col-md-6">
                <label for="assignment_latepenalty">Enter New Password</label>
                <input type="password" class="form-control" id="new_pass" placeholder="New Password">
            </div>
        </div>

        <button type="button" class="appbtn" id="search">Update Password</button>

        <div id="passwordresult"></div>

      </div> <%# close content %>
    </div> <%# close wrapper %>
  </body>

  <%- include('../../partials/scripts'); %>
  <script type="text/javascript" src="../public/js/joincourse.js"></script>

</html>
