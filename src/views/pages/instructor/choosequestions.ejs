<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('../../partials/head', { title: title }) %>
  </head>

  <body>
    <div class="wrapper">
      <%- include('../../partials/instructor/sidebar', {courses: courses}) %>
      <div id="content">
        <h2>Choose Questions for:</h2>
        <h1><%= assignment.name %></h1>
        <hr>
<%#
        <h4>Select Questions to Add</h4>
        <div class="form-row">
          <div class="form-group col-md-3">
            <label for="question_subject">Subject</label>
            <select id="question_subject" class="form-control">
            </select>
          </div>
          <div class="form-group col-md-3">
            <label for="question_topic">Topic</label>
            <select id="question_topic" class="form-control">
            </select>
          </div>
          <div class="form-group col-md-3">
            <label for="question_type">Question Type</label>
            <select id="question_type" class="form-control">
              <option val="Multiple Choice">Multiple Choice</option>
              <option val="Enter Answer Directly">Enter Answer</option>
              <option val="Write Code">Write Code</option>
            </select>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-9">
            <label for="question_keywords">Question Keywords/Phrases</label>
            <textarea type="text" class="form-control" id="question_keywords" placeholder="Enter phrase that could be in question (e.g. binary tree, hash table)"></textarea>
          </div>          
        </div>
        <button id="search" class="appbtn" type="button">Search</button>
%>
        <hr>

        <% questions.forEach((question) => { %>
          <%- include('../../partials/instructor/questionselect', {question: question}) %>
        <% }); %>

      </div> <%# close content %>
    </div> <%# close wrapper %>
  </body>

  <%- include('../../partials/scripts'); %>
  <script type="text/javascript" src="http://localhost:8080/public/js/choosequestions.js"></script>

</html>
