<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('../../partials/head', { title: title }) %>
  </head>

  <body>
    <div class="wrapper">
      <%- include('../../partials/instructor/sidebar', {courses: courses}) %>
      <div id="content">
        <h1><%= course.department %> <%= course.number %> - <%= course.section %></h1>
        <h2><%= course.name %></h2>
        <h3>Course Key: <%= course.coursekey %></h3>

        <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Role</th>
                <th scope="col">Email</th>
                <th scope="col">Report</th>
              </tr>
            </thead>
            <tbody>
            <%# load all enrolees into the table %>
            <% enrolees.forEach((enrolee) => { %>
                <tr>
                    <td><%= enrolee.firstname %> <%= enrolee.lastname %></td>
                    <td><%= enrolee.type %></td>
                    <td><%= enrolee.email %></td>
                    <% if(enrolee.type == 'Student'){ %> 
                      <td><a href="/studentreport/<%= enrolee.id %>">Full Report</a></td>
                    <% } %>
                </tr>
            <% }); %>
            </tbody>
          </table>

      </div> <%# close content %>
    </div> <%# close wrapper %>
  </body>

  <%- include('../../partials/scripts'); %>

</html>
